<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Academia_Studio_Aline_Lotti.Senha"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
             Title="Senha">
    
    <ScrollView>
        <VerticalStackLayout
         Padding="30"
         Spacing="20"
         VerticalOptions="Center">

            <!-- Logo -->
            <Image Source="logostudio.png" 
                WidthRequest="300"
                Aspect="AspectFit" 
                HorizontalOptions="Center" 
                VerticalOptions="Center" 
         />


            <Label Text="Pronto para Treinar?"
                HorizontalOptions="Center"
                TextColor="{AppThemeBinding Light={StaticResource Orange}, Dark={StaticResource Orange}}"
                FontSize="20" 
         />

            <!-- Campo Senha -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Senha"
                FontSize="12"
                TextColor="{StaticResource Orange}"
                FontAttributes="Bold"/>

                <Border BackgroundColor="Transparent"
                    StrokeShape="RoundRectangle 8"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1">
                    <Grid>
                        <Entry x:Name="SenhaEntry"
                            Placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                            IsPassword="True"
                            FontSize="12"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                            PlaceholderColor="{StaticResource Gray400}"
                            BackgroundColor="Transparent"
                            HeightRequest="50"/>
                        <Button x:Name="ToggleSenhaButton"
                            Text="ðŸ‘"
                            FontSize="10"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource White}"
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            Padding="15,0"
                            Clicked="ToggleSenhaButton_Clicked"
                                />
                    </Grid>
                    
                </Border>
                <Button Text="Esqueceu sua Senha?"
                    FontSize="12"
                    FontAttributes="Bold"
                    TextColor="{StaticResource Orange}"
                    BackgroundColor="Transparent"                     
                    Padding="0"
                    HorizontalOptions="Center"
                    />
            </VerticalStackLayout>
            

            <!-- BotÃ£o Login -->
            <Button Text="Entrar"
                 FontSize="16"
                 FontAttributes="Bold"
                 TextColor="{StaticResource White}"
                 BackgroundColor="{StaticResource Orange}"
                 CornerRadius="8" 
                 Clicked="Button_Clicked"
                 HeightRequest="50"
                 Margin="0,20,0,0"/>

           
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>